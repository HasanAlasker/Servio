{
  "expo": {
    "name": "Servio",
    "slug": "Servio",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/adaptive.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#0059FF",
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "width": 200
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive.png",
        "backgroundColor": "#007bffff"
      },
      "package": "com.hasan_alasker.Servio",
      "googleServicesFile": "./google-services.json",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-notifications", "react-native-edge-to-edge"],
    "extra": {
      "eas": {
        "projectId": "bba45793-f511-4f58-be49-7e5320905842"
      }
    }
  }
}
